<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd


		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--  The above schemas define extensions to basic configuration directives in XML -->

    <import resource="classpath:spring-dao-jdbc.xml"/>

    <!--
      ==  This example shows how to wire our example using just Annotations.
      ==  Note the properties is handled by the new tag.
     -->
    <bean id="validator"
          class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean"/>

    <context:property-placeholder location="classpath:application.properties"/>
    <context:component-scan base-package="com.lse.spring.example"
                            annotation-config="true"/>
    <context:spring-configured/>

</beans>